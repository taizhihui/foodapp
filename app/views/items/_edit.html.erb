<%= form_for([@item.restaurant, @item]) do |f| %>
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name, :size => "70" %>
	</div>
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description, :size => "50x8" %>
	</div>
	<div class="actions">
		<%= f.submit %>
	<div>
<% end %>